             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:Brightcove.Forms;assembly=Brightcove.Forms"
             x:Class="Brightcove.Forms.MainPage">
    <StackLayout>
        <local:MyCastButton VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
